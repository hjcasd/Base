<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--标题栏-->
    <declare-styleable name="TitleBar">
        <attr name="leftText" format="string" />
        <attr name="leftTextSize" format="dimension" />
        <attr name="leftTextColor" format="color" />
        <attr name="leftImage" format="integer" />

        <attr name="titleText" format="string" />
        <attr name="titleSize" format="dimension" />
        <attr name="titleColor" format="color" />

        <attr name="rightText" format="string" />
        <attr name="rightTextSize" format="dimension" />
        <attr name="rightTextColor" format="color" />
        <attr name="rightImage" format="integer" />
        <attr name="isShowLine" format="boolean" />

    </declare-styleable>


    <!--滚动条-->
    <declare-styleable name="MarqueeLayout">
        <attr name="switchTime" format="integer"/>
        <attr name="scrollTime" format="integer"/>
        <attr name="orientation" format="enum">
            <enum name="up" value="1"/>
            <enum name="down" value="2"/>
            <enum name="left" value="3"/>
            <enum name="right" value="4"/>
        </attr>
        <attr name="enableAlphaAnim" format="boolean"/>
        <attr name="enableScaleAnim" format="boolean"/>
    </declare-styleable>


    <!--页面状态视图-->
    <declare-styleable name="StatusView">
        <attr name="loadingView" format="reference"/>
        <attr name="errorView" format="reference"/>
        <attr name="emptyView" format="reference"/>
        <attr name="noNetworkView" format="reference"/>
        <attr name="contentView" format="reference"/>
    </declare-styleable>


</resources>