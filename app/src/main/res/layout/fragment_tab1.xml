<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hjc.base.widget.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:titleColor="@color/white"
        app:titleText="tab1" />

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        app:delay_time="3000"
        app:banner_default_image="@mipmap/ic_launcher"
        app:image_scale_type="fit_xy"
        app:indicator_drawable_selected="@mipmap/icon_point_selected"
        app:indicator_drawable_unselected="@mipmap/icon_point_unselected"
        app:indicator_margin="5dp"
        app:indicator_width="15dp"
        app:indicator_height="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="界面一" />


</LinearLayout>