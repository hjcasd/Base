<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--标题栏-->
    <declare-styleable name="TitleBar">
        <attr name="leftImage" format="integer" />
        <attr name="titleText" format="string" />
        <attr name="titleSize" format="dimension" />
        <attr name="titleColor" format="color" />
        <attr name="rightImage" format="integer" />
        <attr name="isShowLine" format="boolean" />
    </declare-styleable>

    <!--带阴影的CardView-->
    <declare-styleable name="ShadowCardView">
        <attr name="cornersRadius" format="dimension"/>
        <attr name="cardColor" format="color"/>
        <attr name="shadowLeftHeight" format="dimension"/>
        <attr name="shadowTopHeight" format="dimension"/>
        <attr name="shadowRightHeight" format="dimension"/>
        <attr name="shadowBottomHeight" format="dimension"/>
        <attr name="shadowOffsetX" format="dimension"/>
        <attr name="shadowOffsetY" format="dimension"/>
        <attr name="shadowColor" format="color"/>
        <attr name="shadowRadius" format="integer"/>
    </declare-styleable>

    <!--声音波纹View-->
    <declare-styleable name="WaveView">
        <attr name="waveColor" format="color"/>
        <attr name="baselineColor" format="color"/>
        <attr name="maxValue" format="integer"/>
        <attr name="waveStokeWidth" format="dimension"/>
        <attr name="invalidateTime" format="integer"/>
        <attr name="space" format="dimension"/>
    </declare-styleable>

    <!--弧形View-->
    <declare-styleable name="ArcView">
        <attr name="arcHeight" format="dimension"/>
        <attr name="lgColor"   format="color"/>
        <attr name="bgColor" format="color"/>
    </declare-styleable>

    <!--带图片的TextView-->
    <declare-styleable name="IconTextView">
        <attr name="leftDrawableWidth" format="dimension" />
        <attr name="leftDrawableHeight" format="dimension" />
        <attr name="rightDrawableWidth" format="dimension" />
        <attr name="rightDrawableHeight" format="dimension" />
        <attr name="topDrawableWidth" format="dimension" />
        <attr name="topDrawableHeight" format="dimension" />
        <attr name="bottomDrawableWidth" format="dimension" />
        <attr name="bottomDrawableHeight" format="dimension" />
    </declare-styleable>

    <!--闪烁效果View-->
    <declare-styleable name="ShimmerLayout">
        <attr name="shimmer_color" format="color|reference"/>
        <attr name="shimmer_animation_duration" format="integer|reference"/>
        <attr name="shimmer_auto_start" format="boolean|reference"/>
        <attr name="shimmer_angle" format="integer|reference"/>
        <attr name="shimmer_mask_width" format="float|reference"/>
        <attr name="shimmer_gradient_center_color_width" format="float|reference"/>
        <attr name="shimmer_reverse_animation" format="boolean|reference"/>
    </declare-styleable>

    <!--水平滑动指示器View-->
    <declare-styleable name="LineIndicatorView">
        <attr name="indicatorBgColor" format="color"/>
        <attr name="indicatorColor" format="color"/>
        <attr name="indicatorWidth" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="RealtimeBlurView">
        <attr name="realtimeBlurRadius" format="dimension"/>
        <attr name="realtimeDownSampleFactor" format="float"/>
        <attr name="realtimeOverlayColor" format="color"/>
    </declare-styleable>

</resources>