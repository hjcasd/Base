<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--标题栏-->
    <declare-styleable name="TitleBar">
        <attr name="leftImage" format="integer" />
        <attr name="titleText" format="string" />
        <attr name="titleSize" format="dimension" />
        <attr name="titleColor" format="color" />
        <attr name="rightImage" format="integer" />
        <attr name="isShowLine" format="boolean" />
    </declare-styleable>

    <!--带阴影的CardView-->
    <declare-styleable name="ShadowCardView">
        <attr name="cornersRadius" format="dimension"/>
        <attr name="cardColor" format="color"/>
        <attr name="shadowLeftHeight" format="dimension"/>
        <attr name="shadowTopHeight" format="dimension"/>
        <attr name="shadowRightHeight" format="dimension"/>
        <attr name="shadowBottomHeight" format="dimension"/>
        <attr name="shadowOffsetX" format="dimension"/>
        <attr name="shadowOffsetY" format="dimension"/>
        <attr name="shadowColor" format="color"/>
        <attr name="shadowRadius" format="integer"/>
    </declare-styleable>

    <!--声音波纹View-->
    <declare-styleable name="WaveView">
        <attr name="waveColor" format="color"/>
        <attr name="baselineColor" format="color"/>
        <attr name="maxValue" format="integer"/>
        <attr name="waveStokeWidth" format="dimension"/>
        <attr name="invalidateTime" format="integer"/>
        <attr name="space" format="dimension"/>
    </declare-styleable>

    <!--弧形的界面属性-->
    <declare-styleable name="ArcView">
        <attr name="arcHeight" format="dimension"/>
        <attr name="lgColor"   format="color"/>
        <attr name="bgColor" format="color"/>
    </declare-styleable>

</resources>