<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="onClickListener"
            type="android.view.View.OnClickListener" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.hjc.library_widget.FixedViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{onClickListener}"
            android:padding="10dp"
            android:src="@mipmap/other_icon_close"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RelativeLayout
            android:id="@+id/ll_panel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="35dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">

            <LinearLayout
                android:id="@+id/ll_switch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:alpha="0.6"
                android:background="@drawable/other_shape_bg_panel_circle"
                android:gravity="center"
                android:onClick="@{onClickListener}"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/other_icon_eyes_white" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_function"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.6"
                    android:background="@drawable/other_shape_bg_panel_rectangle"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_plane"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:onClick="@{onClickListener}"
                        android:src="@mipmap/other_icon_plane_white" />

                    <ImageView
                        android:id="@+id/iv_seat"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="15dp"
                        android:onClick="@{onClickListener}"
                        android:src="@mipmap/other_icon_seat_white" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_switch2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:alpha="0.6"
                    android:background="@drawable/other_shape_bg_panel_circle"
                    android:gravity="center"
                    android:onClick="@{onClickListener}"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_eyes"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/other_icon_eyes_red" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_page_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:alpha="0.6"
            android:background="@drawable/other_shape_bg_page_round"
            android:textColor="@color/base_white"
            app:layout_constraintBottom_toBottomOf="@id/ll_panel"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/ll_panel"
            tools:text="1/2" />

        <com.hjc.module_other.widget.PlaneInfoView
            android:id="@+id/plane_info_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="invisible"
            app:layout_constraintRight_toRightOf="parent">

        </com.hjc.module_other.widget.PlaneInfoView>

        <com.hjc.module_other.widget.SeatInfoView
            android:id="@+id/seat_info_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="invisible"
            app:layout_constraintRight_toRightOf="parent">

        </com.hjc.module_other.widget.SeatInfoView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>