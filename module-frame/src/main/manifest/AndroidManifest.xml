<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hjc.module_frame">

    <!--    单独module    -->

    <application
        android:name=".FrameApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/frame_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/BaseAppTheme">

        <activity android:name=".ui.FrameActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.loadSir.LoadSirActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.eventbus.EventPostActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.eventbus.EventReceiveActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.zxing.QRCodeActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.zxing.ScanCodeActivity"
            android:screenOrientation="portrait" />

    </application>

</manifest>