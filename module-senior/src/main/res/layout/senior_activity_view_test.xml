<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.hjc.library_widget.bar.TitleBar
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/senior_color"
            app:leftImage="@mipmap/widget_icon_back"
            app:titleColor="@color/base_white"
            app:titleText="@string/senior_view_custom_title" />

        <com.hjc.module_senior.widget.TestView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            app:customText="王者荣耀"
            app:customTextColor="@color/base_black"
            app:customTextSize="24sp"/>

        <com.hjc.module_senior.widget.TestViewGroup
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/base_color">

            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/base_red"/>

            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/base_red"/>

            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/base_red"/>

            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/base_red"/>

        </com.hjc.module_senior.widget.TestViewGroup>

    </LinearLayout>

</layout>